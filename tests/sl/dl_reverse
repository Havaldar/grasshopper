method dl_reverse(lst)
    requires dlseg(start, null, null, end);
    ensures dlseg(prv, null, null, start);
{
    curr := start;
    prv := null;
    while (curr != null) 
        invariant dlseg(curr, prv, null, end) * dlseg(prv, curr, null, start);
    {
        tmp := curr;
        curr := curr.next;
        tmp.next := prv;
        prv := tmp;
        prv.back := curr;
    }
}
