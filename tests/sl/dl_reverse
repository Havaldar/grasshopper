dl_reverse(lst)
requires dlseg(start, null, null, end)
ensures dlseg(end, null, null, start)
{
    curr := start;
    prv := null;
    while(curr ~= null) dlseg(curr, prv, null, end) * dlseg(prv, curr, null, start) {
        tmp := curr;
        tmp.next := prv;
        prv.back := tmp;
        prv := tmp;
    }
}
