dl_reverse(lst)
requires dlseg(start, null, null, end)
ensures dlseg(end, null, null, start)
{
    curr := start;
    prev := null;
    while(curr ~= null) dlseg(curr, prev, null, end) * dlseg(prev, curr, null, start) {
        tmp := curr;
        tmp.next := prev;
        prev.back := tmp;
        prev := tmp;
    }
}
