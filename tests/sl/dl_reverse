method dl_reverse(lst)
    requires dlseg(next, prev, start, null, null, end);
    ensures dlseg(next, prev, prv, null, null, start);
{
    curr := start;
    prv := null;
    while (curr != null) 
        invariant dlseg(next, prev, curr, prv, null, end) * dlseg(next, prev, prv, curr, null, start);
    {
        tmp := curr;
        curr := curr.next;
        tmp.next := prv;
        prv := tmp;
        prv.prev := curr;
    }
}
