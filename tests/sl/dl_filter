method dl_filter(a, b)
    requires dlseg(next, prev, a, null, null, b);
    ensures dlseg(next, prev, a, null, null, b);
{
    prv := null;
    curr := a;
    while (curr != null) 
      invariant dlseg(next, prev, a,null,curr,prv) * dlseg(next, prev, curr,prv,null,b);
    { 
      old_curr := curr;
      curr := curr.next;
      if (Nondet) {
        if (prv != null) {
            prv.next := curr;
        } else {
            a := curr;
        }
        if (curr != null) {
            curr.prev := prv;
        } else {
            b := prv;
        }
        free old_curr;
      } else {
        prv := old_curr;
      }
    }
}
