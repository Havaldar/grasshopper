method dl_traverse_backward(lst)
    requires dlseg(next, prev, lst, a, null, b);
    ensures dlseg(next, prev, lst, a, null, b);
{
    curr := b;
    nxt := null;
    while (curr != a) 
        invariant dlseg(next, prev, lst, a, nxt, curr) * dlseg(next, prev, nxt, curr, null, b);
    {
        nxt := curr;
        curr := curr.back; 
    }
}
