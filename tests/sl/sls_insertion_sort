method insertion_sort(lst)
    requires lseg(lst, null);
    ensures slseg(lst, null);
{
    prv := null;
    srt := lst;
    while (srt != null)
        invariant prv == null * srt == lst * lseg(lst, null) || lslseg(lst, srt, prv) * ulseg(srt, null, prv);
    {
        curr := srt.next;
        min := srt;
        while (curr != null)
            invariant prv == null * lseg(curr, null) || ulseg(curr, null, prv) * prv.data <= min.data;
            invariant ulseg(srt, min, min);
            invariant ulseg(min, curr, min);
            invariant min != null;
        {
            if (curr.data < min.data) {
                min := curr;
            }
            curr := curr.next;
        }
        tmp := min.data;
        min.data := srt.data;
        srt.data := tmp;
        prv := srt;
        srt := srt.next;
    }
}
