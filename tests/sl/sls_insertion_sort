method insertion_sort(lst)
    requires lseg(lst, null);
    ensures slseg(lst, null);
{
    srt := lst;
    x := lst;
    while (srt != null)
        invariant lslseg(lst, srt, srt) * ulseg(srt, null, srt);
    {
        curr := srt.next;
        min := srt;
        while (curr != null)
            invariant ulseg(srt, min, min) * ulseg(min, curr, min) * ulseg(curr, null, srt) * min != null * min.data >= srt.data;
        {
            if (curr.data < min.data) {
                min := curr;
            }
            curr := curr.next;
        }
        tmp := min.data;
        min.data := srt.data;
        srt.data := tmp;
        x := srt;
        srt := srt.next;
    }
}
