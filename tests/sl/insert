method insert(lst, elt)
    requires lseg(next, lst, null) * elt |-> null;
    ensures lseg(next, returned, null);
{
    if (lst == null)
        return elt;
    else {
        curr := lst;
        while ( Nondet && curr.next != null ) 
            invariant curr != null * lseg(next, lst, curr) * lseg(next, curr, null);
        {
            curr := curr.next;
        }
        elt.next := curr.next;
        curr.next := elt;
        return lst;
    }
}
