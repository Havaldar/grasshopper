method dl_traverse(lst)
    requires dlseg(lst, a, null, b);
    ensures dlseg(lst, a, null, b);
{
    curr := lst;
    while(curr != null) 
        invariant emp;
    {
        curr := curr.next; 
    }
}

method dl_traverse_backward(lst)
    requires dlseg(lst, a, null, b);
    ensures dlseg(lst, a, null, b);
{
    curr := b;
    while(curr != lst) 
        invariant emp;
    {
        curr := curr.back; 
    }
}
