method dl_traverse(lst)
    requires dlseg(next, prev, lst, a, null, b);
    ensures dlseg(next, prev, lst, a, null, b);
{
    curr := lst;
    prv := a;
    while (curr != null) 
        invariant dlseg(next, prev, lst, a, curr, prv) * dlseg(next, prev, curr, prv, null, b);
    {
        prv := curr;
        curr := curr.next; 
    }
}

