method insert(lst, elt)
    requires lseg(next, lst, null) * elt |-> null;
    ensures lseg(next, lst, null);
{
    if (lst == null) {
      lst := elt; 
      return lst;
    } else {
        curr := lst;
        while ( Random && curr.next != null ) 
            invariant curr != null * lseg(next, lst, curr) * lseg(next, curr, null);
        {
            curr := curr.next;
        }
        elt.next := curr;
        return lst;
    }
}
