method sls_insert(lst, elt)
    requires slseg(lst, null) * elt |-> null;
    ensures slseg(returned, null);
{
    if (lst == null || lst.data > elt.data) {
        elt.next := lst;
        return elt;
    } else {
        curr := lst;
        while (curr.next != null && curr.next.data <= elt.data) 
            invariant curr != null * slseg(lst, curr) * slseg(curr, null) * curr.data <= elt.data;
        {
            curr := curr.next;
        }
        elt.next := curr.next;
        curr.next := elt;
        return lst;
    }
}
