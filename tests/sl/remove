method remove(lst)
    requires lseg(next, lst, null);
    ensures lseg(next, returned, null);
{
    if (lst == null)
        return null;
    else {
        curr := lst;
        while ( Random && curr.next != null) 
            invariant curr != null * lseg(next, lst, curr) * lseg(next, curr, null);
        {
            curr := curr.next;
        }
        tmp := curr.next;
        if (tmp == null) {
        } else {
            curr.next := tmp.next;
            free tmp;
        }
        return lst;
    }
}
