method pairwise_sum(x, y)
    requires slseg(x, null) * slseg(y, null);
    ensures slseg(x, null) * slseg(y, null) * slseg(returned, null);
{
    if (x == null || y == null) {
      return null;
    }
    curr_x := x;
    curr_y := y;
    new z;
    last_z := z;
    z.data := curr_x.data + curr_y.data;
    z.next := null;
    while (curr_x.next != null && curr_y.next != null) 
        invariant curr_x != null * lslseg(x, curr_x, curr_x) * slseg(curr_x, null);
        invariant curr_y != null * lslseg(y, curr_y, curr_y) * slseg(curr_y, null);
        invariant lslseg(z, last_z, last_z) * last_z |-> null;
        invariant last_z.data <= curr_x.data + curr_y.data;
    {
        tmp := last_z;
        new last_z;
        last_z.next := null;
        last_z.data := curr_x.data + curr_y.data;        
        if (z == null) {
            z := last_z;
        } else {
            tmp.next := last_z;
        }
        curr_x := curr_x.next;
        curr_y := curr_y.next;
    }
    return z;
}
