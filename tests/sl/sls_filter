method filter(x)
    requires slseg(x, null);
    ensures slseg(x, null);
{
    prv := null;
    curr := x;
    while (curr != null) 
      invariant (lslseg(x, prv, prv) * prv |-> curr * uslseg(curr, null, prv))
             || (prv == null * x == curr * slseg(curr, null));
    {
      old_curr := curr;
      curr := curr.next;
      if (NonDet) {
        if (prv != null) {
          prv.next := curr;
        } else {
          x := curr;
        }
        free old_curr;
      } else {
        prv := old_curr;
      }
    }
}
