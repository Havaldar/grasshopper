method traverse1(lst)
    requires lseg(lst, null);
    ensures lseg(lst, null);
{
    curr := lst;
    while(curr != null) 
        invariant lseg(lst, curr) * lseg(curr, null);
    {
        curr := curr.next; 
    }
}

