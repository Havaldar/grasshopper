// Structure and predicate declarations for singly-linked lists

struct Node {
  var next: Node;
}

function lseg_footprint(x: Node, y: Node) returns (FP: Set<Loc<Node>>) {
  forall z: Loc<Node> :: z in FP == (Btwn(next, x, z, y) && z != y)
}

predicate lseg(x: Node, y: Node, FP: Set<Loc<Node>>) {
  Reach(next, x, y) && FP == lseg_footprint(x, y)
}

