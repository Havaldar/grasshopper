// structure and predicate declarations for set implementation 
// based on sorted singly-linked lists

include "slslist.spl";

function witness(v: Int, FP: Set<Node>) returns (res: Node) {
  true
}

function content(FP: Set<Node>) returns (C: Set<Int>) {
  (forall x: Node :: x in FP ==> x == witness(x.data, FP)) &&
  (forall x: Node :: x in FP ==> x.data in C) &&
  (forall v in C :: witness(v, FP) in FP) &&
  (forall v: Int :: v !in C ==> witness(v, FP) == null) &&
  (forall v in C :: v == witness(v, FP).data @(matching v yields witness(v, FP).data))
}

predicate list_set(x: Node, y: Node, C: Set<Int>)(FP: Set<Node>) {
  lseg(x, y, FP) &&
  lseg_strictly_increasing(x, FP) &&
  C == content(FP)
}
