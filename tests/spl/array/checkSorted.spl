procedure checkSorted(a: Array<Int>)
  requires acc(a) &*& arrayseg(a, 0, a.length)
  requires forall i: Int, j: Int:: i >= 0 && i <= j && j < a.length ==> a[i] <= a[j]
  ensures  acc(a) &*& arrayseg(a, 0, a.length)
{
  var i := 0;
  
  while (i < a.length - 1)
    invariant i >= 0;
    invariant acc(a) &*& arrayseg(a, 0, a.length)
  {
    pure assert(a[i] <= a[i+1]);
    i := i + 1;
  }
}
