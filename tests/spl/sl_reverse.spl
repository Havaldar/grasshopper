struct Node {
  var next: Node;
}

predicate lseg(x: Node, y: Node) {
  x == y || x != y &*& x &*& lseg(x.next, y)
}

procedure reverse(lst: Node) returns (rev: Node)
  requires lseg(lst, null);
  ensures lseg(rev, null);
{
  var curr: Node;
  curr := lst;
  rev := null;
  while (curr != null) 
    invariant lseg(rev, null);
    invariant lseg(curr, null);
  {
    var tmp: Node;
    tmp := curr;
    curr := curr.next;
    tmp.next := rev;
    rev := tmp;
  }
}

